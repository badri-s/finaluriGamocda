<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#25F71515">

        <FrameLayout
            android:id="@+id/logLinerLay"
            android:layout_width="280dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="@drawable/autorizacia"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/logInLay"
                android:layout_width="280dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:translationZ="24sp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/emailIn"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/edit_text"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:paddingLeft="5sp"
                    android:textColor="#A8A8A8"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:translationZ="15sp" />

                <EditText
                    android:id="@+id/passwordIn"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/edit_text"
                    android:drawableLeft="@drawable/ic_visibility_off_black_24dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:paddingLeft="5sp"
                    android:textColor="#A8A8A8"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:translationZ="15sp" />

                <TextView
                    android:id="@+id/logIn"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/get_start"
                    android:gravity="center"
                    android:text="Log In"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:translationZ="15sp" />

                <LinearLayout
                    android:id="@+id/googleFacebook"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/facebookBtt"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_margin="5sp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/facebookpng"
                        android:translationZ="24sp" />

                    <ImageView
                        android:id="@+id/googleBtt"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_margin="5sp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/googlepng"
                        android:translationZ="24sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/forgotReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="5sp"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="start|center"
                    android:paddingLeft="10sp"
                    android:text="Forget password?"
                    android:textColor="#D60000"
                    android:textSize="10sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/registrartion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="end|center"
                    android:paddingRight="10sp"
                    android:text="Registration"
                    android:textColor="#D60000"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/signUpLay"
                android:layout_width="280dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:translationZ="24sp"
                android:visibility="invisible">

            <EditText
                android:id="@+id/emailUp"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_margin="5sp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:paddingLeft="5sp"
                android:textColor="#A8A8A8"
                android:textSize="15sp"
                android:textStyle="normal"
                android:translationZ="15sp" />

            <EditText
                android:id="@+id/passwordUp"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_margin="5sp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/ic_visibility_off_black_24dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="5sp"
                android:textColor="#A8A8A8"
                android:textSize="15sp"
                android:textStyle="normal"
                android:translationZ="15sp" />

            <TextView
                android:id="@+id/signUp"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_margin="5sp"
                android:background="@drawable/get_start"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="normal"
                android:translationZ="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/backToLogIn"
                android:paddingLeft="80dp"
                android:paddingRight="90dp"
                android:drawableLeft="@drawable/ic_navigate_before_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textSize="25sp"
                android:text="back"
                android:visibility="invisible"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textStyle="normal"
                android:textColor="#000"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/facebookLay"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/autorizacia"
            android:orientation="vertical"
            android:visibility="invisible">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/googleLay"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/autorizacia"
            android:orientation="vertical"
            android:visibility="invisible">

        </LinearLayout>


        <TextView
            android:id="@+id/getStart"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20sp"
            android:background="@drawable/get_start"
            android:gravity="center"
            android:text="Get Start"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="normal"
            android:translationZ="20sp"
            android:visibility="visible" />

        <Button
            android:visibility="invisible"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="30sp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/x_gauqmeba"
            android:text="X"
            android:textColor="#E70808"
            android:textSize="30sp"
            android:id="@+id/frameMain"/>

    </FrameLayout>


</LinearLayout>